<div><a href="/pages/"><< Gallery</a></div>

<h2>Current Working Directory</h2>

{{#if isClean}}
<p class="bg-success">Working directory is clean. Nothing to commit.</p>
{{else}}
<div class="bg-info">
	<ul>
		{{#each status}}
			<li>{{description}}: {{path}}</li>
		{{/each}}
	</ul>

	<form method="post" action="/commitcurrent">
		<div class="form-group">
			<label for="messageInput">Commit message</label>
			<input type="text" id="messageInput" name="message" class="form-control">
		</div>
		<button type="submit" class="btn btn-default">git add -a; git commit</button>
	</form>
</div>
{{/if}}

<iframe src="/index.html" width="1000" height="600" scrolling="no" marginwidth="0" marginheight="0" frameborder="0"></iframe>



{{> pagePartial }}